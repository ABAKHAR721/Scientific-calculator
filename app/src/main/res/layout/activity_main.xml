<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/expressionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:gravity="end"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:padding="8dp">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="/"
            android:backgroundTint="@color/button_bg_operator"
            android:textColor="@color/button_text_operator" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="*"
            android:backgroundTint="@color/button_bg_operator"
            android:textColor="@color/button_text_operator" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-"
            android:backgroundTint="@color/button_bg_operator"
            android:textColor="@color/button_text_operator" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0"
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="."
            android:backgroundTint="@color/button_bg_number"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+"
            android:backgroundTint="@color/button_bg_operator"
            android:textColor="@color/button_text_operator" />

        <!-- Row 5 (Scientific functions) -->
        <Button
            android:id="@+id/buttonSqrt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="√"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonPower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="^"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="log"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonLn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="ln"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonSin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="sin"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonCos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="cos"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonTan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="tan"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonOpenParen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="("
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonCloseParen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text=")"
            android:backgroundTint="@color/button_bg_function"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="C"
            android:backgroundTint="@color/button_bg_clear"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="⌫"
            android:backgroundTint="@color/button_bg_clear"
            android:textColor="@color/button_text_default" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="="
            android:backgroundTint="@color/button_bg_operator"
            android:textColor="@color/button_text_operator" />

        <!-- Button to restore the last expression -->
        <Button
            android:id="@+id/buttonRestore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:text="Restore Last Expression"
            android:textColor="@color/button_text_default"
            android:backgroundTint="@color/button_bg_operator"
            android:textSize="18sp"
            android:layout_gravity="fill_horizontal"/>

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C2F87"
        android:gravity="center"
        android:padding="16dp"
        android:text="ABAKHAR SCIENTIFIC CALCULATOR"
        android:textColor="#FFC002"
        android:textSize="30sp" />

</LinearLayout>
